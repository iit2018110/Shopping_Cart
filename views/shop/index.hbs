<h1>{{title}}</h1>
<p>Welcome to shopping cart</p>

<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>

<div class="row row-cols-4">
  {{# each products}}
    <div class="col"><div class="container">  
      <div class="card">    
      <img src="{{this.imagePath}}"> 
          <div class="card-body">  
              <h4 class="card-title"> 
                  {{this.title}}
              </h4>  

              <p class="card-text"> 
                  {{this.description}} 
              </p> 

              <h5><b><em>${{this.price}}</em></b></h5>
              <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right"> 
                  Add to Shopping Cart
              </a>  
          </div> 
      </div> 
    </div></div>
  {{/each}}
</div>

